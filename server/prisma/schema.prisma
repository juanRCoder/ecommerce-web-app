generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(uuid())
  name        String
  price       Float
  stock       Int
  status      String
  imageUrl    String?
  categoryId  String

  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  // relationships
  orderProducts   OrderProducts[]
  category    Category @relation(fields: [categoryId], references: [id])
  @@map("products")
}

model Category {
  id          String  @id @default(uuid())
  name        String

  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  // relationships
  products    Product[]
  @@map("categories")
}

model Order {
  id              String  @id @default(uuid())
  name            String
  phone           Int
  typeOfDelivery  String
  address         String?
  typeOfPayment   String
  imageVoucher    String?
  notes           String?

  createAt        DateTime @default(now())
  updateAt        DateTime @updatedAt

  // relationships
  orderProducts   OrderProducts[]
  @@map("orders")
}

model OrderProducts {
  id          String  @id @default(uuid())
  orderId     String
  productId   String
  quantity    Int

  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  // relationships
  order       Order   @relation(fields: [orderId], references: [id])
  product     Product @relation(fields: [productId], references: [id])
  @@map("orderProducts")
}